{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"pretty": true,
		"sourceMap": true,
		"target": "es6",
		"outDir": "./dist",
		"baseUrl": "./src",
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.json",
	],
	"exclude": [
		"node_modules"
	]
}